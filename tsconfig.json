{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": "src",
		"paths": {
			"@components/*": ["components/*"],
			"@utils": ["utils/*"],
			"@types": ["types"],
			"@public/*": ["../public/*"],
			"@content/*": ["content/*"],
			"@styles:*": ["styles/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
