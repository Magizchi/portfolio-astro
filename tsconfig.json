{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@layouts/*": [
        "layouts/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils": [
        "utils/*"
      ],
      "@types": [
        "types"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@public/*":[
        "../public/*"
      ],
      "@content/*":[
        "content/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}