---
import Hero from '@components/astro/features/landingPage/Hero.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import Card from '@components/astro/atoms/Card.astro';
import Project from '@components/astro/features/landingPage/Project.astro';
import Books from '@components/astro/features/landingPage/Books.astro';
import Experience from '@components/astro/features/landingPage/Experience.astro';
---

<BaseLayout>
	<div class="mx-3 grid grid-cols-4 gap-3 md:grid-cols-7 md:grid-rows-5 lg:mx-0 lg:gap-5">
		<Card colSpan="col-start-1 col-span-4 md:col-span-4 row-span-2 !p-10">
			<Hero />
		</Card>
		<Card colSpan="col-span-4 md:col-span-5 lg:col-span-3 row-span-3">
			<Experience />
		</Card>
		<Card colSpan="col-span-4 row-span-3 md:row-span-3 lg:row-span-3">
			<Project />
		</Card>
		<Card colSpan="col-span-2 row-span-3">
			<Books />
		</Card>
	</div>
</BaseLayout>
