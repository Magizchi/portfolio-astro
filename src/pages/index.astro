---
import Hero from '@components/astro/features/landingPage/Hero.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import Card from '@components/astro/atoms/Card.astro';
import About from '@components/astro/features/landingPage/About.astro';
import Project from '@components/astro/features/landingPage/Project.astro';
import Books from '@components/astro/features/landingPage/Books.astro';
import Experience from '@components/astro/features/landingPage/Experience.astro';
import { Icon } from 'astro-icon/components';
import { link_Github, link_LinkedIn } from '@constants/consts';
---

<BaseLayout>
	<section class="grid grid-cols-9 grid-rows-4 gap-5">
		<Card colSpan="col-span-6 row-span-4">
			<Hero />
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div
				class="xp flex h-full items-center justify-center rounded-xl p-2 text-center font-semibold text-white"
			>
				<span class="text-sm">
					<span class="text-5xl">4</span>
					 ans exp√©rience
				</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div class="react flex h-full flex-col items-center justify-center rounded-xl py-1">
				<Icon name="reactjs-fill" class="text-6xl text-white" />
				<span class="font-semibold text-white">React</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div class="node flex h-full flex-col items-center justify-center rounded-xl">
				<Icon name="nodejs-fill" class="text-6xl text-white" />
				<span class="font-semibold text-white">Node.js</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div class="typescript flex h-full flex-col items-center justify-center rounded-xl">
				<Icon
					name="typescript-fill"
					class="text-6xl transition-all duration-300 group-hover:text-white"
				/>
				<span class="font-semibold text-white">TypeScript</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div class="svelte flex h-full flex-col items-center justify-center rounded-xl">
				<Icon name="svelte-fill" class="text-6xl text-white" />
				<span class="font-semibold text-white">Svelte</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 row-start-5">
			<div class="typescript flex h-full flex-col items-center justify-center rounded-xl">
				<Icon name="tailwind-css-fill" class="text-6xl text-white" />
				<span class="font-semibold text-white">Tailwind CSS</span>
			</div>
		</Card>
		<Card colSpan="col-span-1 row-span-1 border-2 !border-[#1f43a6]">
			<a
				href={link_Github}
				class="group relative flex h-full items-center justify-center overflow-hidden rounded-lg text-[#1f43a6] hover:cursor-pointer"
			>
				<div
					class="react absolute bottom-0 h-0 w-full transition-all duration-300 group-hover:h-full"
				>
				</div>
				<div class="z-10 flex flex-col items-center justify-center">
					<Icon
						name="github-fill"
						class="text-6xl transition-all duration-300 group-hover:text-white"
					/>
					<p
						class="-z-50 h-full rounded-xl font-semibold text-[#1f43a6] transition-all duration-300 group-hover:flex"
					>
						<span
							class="flex items-center justify-center space-x-5 group-hover:text-white"
						>
							Github <Icon
								name="arrow-right"
								class="text-base transition-all duration-300"
							/>
						</span>
					</p>
				</div>
			</a>
		</Card>
		<Card colSpan="col-span-1 row-span-1 border-2 !border-[#1f43a6]">
			<a
				href={link_LinkedIn}
				class="group relative flex h-full items-center justify-center overflow-hidden rounded-lg text-[#1f43a6] hover:cursor-pointer"
			>
				<div
					class="react absolute bottom-0 h-0 w-full transition-all duration-300 group-hover:h-full"
				>
				</div>
				<div class="z-10 flex flex-col items-center justify-center">
					<Icon
						name="linkedin-box-fill"
						class="text-6xl transition-all duration-300 group-hover:text-white"
					/>
					<p
						class="-z-50 h-full font-semibold text-[#1f43a6] transition-all duration-300 group-hover:flex"
					>
						<span
							class="flex items-center justify-center space-x-5 group-hover:text-white"
						>
							LinkedIn <Icon
								name="arrow-right"
								class="text-base transition-all duration-300"
							/>
						</span>
					</p>
				</div>
			</a>
		</Card>
		<Card colSpan="col-span-2 row-span-4 row-start-2 col-start-7">
			<About />
		</Card>
		<Card colSpan="col-span-4 row-span-4">
			<Project />
		</Card>
		<Card colSpan="col-span-3 row-span-4 ">
			<Experience />
		</Card>
		<Card colSpan="col-span-2 row-span-2">
			<Books />
		</Card>
	</section>
</BaseLayout>
