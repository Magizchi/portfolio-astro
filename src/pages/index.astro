---
import Hero from '@components/astro/features/landingPage/Hero.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import Card from '@components/astro/atoms/Card.astro';
import Project from '@components/astro/features/landingPage/Project.astro';
import Books from '@components/astro/features/landingPage/Books.astro';
import Experience from '@components/astro/features/landingPage/Experience.astro';
import { Icon } from 'astro-icon/components';
---

<BaseLayout>
	<article class="flex flex-col gap-14 p-5 lg:max-w-3xl lg:gap-16 lg:p-16">
		<section class="relative flex items-center">
			<div class="mainSection absolute -left-32 -top-56 -z-40 h-[880px] w-[880px] rounded-full">
			</div>
			<Hero />
		</section>
		<section class="relative rounded-2xl bg-[#14213D] px-12 py-8">
			<div class="absolute -left-10">
				<Icon name="supp" class="absolute -rotate-90 text-4xl text-orange-500" />
				<Icon name="inf" class="absolute -rotate-90 text-4xl text-orange-500" />
				<Icon name="chevron-sides" class="absolute -rotate-90 text-4xl" />
			</div>
			<Experience />
		</section>
		<section class="relative rounded-2xl bg-[#14213D] px-12 py-8">
			<div class="absolute -left-10">
				<Icon name="supp" class="absolute -rotate-90 text-4xl text-orange-500" />
				<Icon name="inf" class="absolute -rotate-90 text-4xl text-orange-500" />
				<Icon name="chevron-sides" class="absolute -rotate-90 text-4xl" />
			</div>
			<Project />
		</section>
		<!-- 
	
		<Card colSpan="col-span-2 row-span-3">
			<Books />
		</Card> -->
	</article>
</BaseLayout>
