---
import Badge from '@components/astro/atoms/Badge.astro';
import { Image } from 'astro:assets';

const { title, img, description, githubUrl, url, packages } = Astro.props;
---

<div
	class="bg-with group rounded-lg transition ease-in-out hover:bg-slate-100 group-hover:shadow-xl"
>
	<div class="flex">
		{
			img && (
				<Image
					src={img}
					width={250}
					height={250}
					format="webp"
					alt={title}
					class="mr-2 hidden max-w-full rounded-lg lg:block lg:max-w-[13rem]"
				/>
			)
		}
		<div class="m-2 flex w-full grow flex-col justify-between">
			<div class="gap flex flex-col gap-1">
				<h1 class="text-xl font-bold">
					<a href={url} target="_blank" class="text-blue-500 group-hover:underline">
						{title}
					</a>
				</h1>
				<p class="py-1 text-sm">{description}</p>
				<p class="py-1">
					<ul class="gap flex flex-row gap-3">
						{
							packages.map((item: string) => (
								<li>
									<Badge>{item}</Badge>
								</li>
							))
						}
					</ul>
				</p>
			</div>
			<a href={githubUrl} target="_blank" class="text-sm text-blue-500 underline">Code source</a>
		</div>
	</div>
</div>
