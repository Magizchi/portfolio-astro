---
import { getCollection, type CollectionEntry } from 'astro:content';

const allBooks: CollectionEntry<'books'>[] = await getCollection('books');
---

<div class="mx-8 text-stone-900">
	<div class="my-8">
		<h2 class="mb-2 font-satoshi text-3xl font-bold">Lectures</h2>
		<p class="text-sm">
			J'aime aussi lire des livres, voici quelques-uns des livres que j'ai lus
		</p>
	</div>
	<ul class="gap mb-3 flex flex-col gap-5">
		{
			allBooks.map((book) => (
				<li class="flex flex-col">
					{book.data.title}{' '}
					<span class="text-sm font-thin italic text-stone-700">{book.data.author}</span>
				</li>
			))
		}
	</ul>
</div>
