---
import BaseHead from '@components/astro/BaseHead.astro';
import Footer from '@components/astro/Footer.astro';
const { image, title, description = 'SITE_DESCRIPTION' } = Astro.props;
---

<!DOCTYPE html>
<meta charset="utf-8" />
<html lang="fr">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body class="relative mx-auto flex min-h-screen flex-col lg:max-w-3xl">
		<main class="flex flex-col gap-14 p-5 lg:max-w-3xl lg:gap-16 lg:p-16">
			<slot />
		</main>
		<Footer />
	</body>
</html>
