---
const { title, description } = Astro.props;
---

<section class="flex justify-center bg-[#14213D]/80 p-5 text-white">
	<div class="gap flex flex-col gap-5">
		<div class="flex flex-col items-center border-b-2 p-5">
			<h2 class="text-xl font-bold">{title}</h2>
			<p class="text-center">{description}</p>
		</div>
		<slot />
	</div>
</section>
