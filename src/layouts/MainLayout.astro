---
import BaseHead from '@components/astro/BaseHead.astro';
import Footer from '@components/astro/Footer.astro';
import Header from '@components/astro/Header.astro';
const { image, title, description = 'SITE_DESCRIPTION' } = Astro.props;
---

<!DOCTYPE html>
<meta charset="utf-8" />
<html lang="fr">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<Header />
	<body class="relative">
		<main class="container mx-auto flex max-w-6xl justify-center pt-10">
			<slot />
		</main>
		<Footer />
	</body>
</html>
